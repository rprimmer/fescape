{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "make",
            // Optional: Specify the make target to use; remove if not needed
            "args": [
                "-C",
                "${workspaceFolder}",
                "all" // This is your make target, change "all" to your specific target if needed
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
